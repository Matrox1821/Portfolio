---
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="background"></div>
    <div class="background-header"></div>
    <div class="background-header-grid"></div>

    <main>
      <Header
        headerNav={[
          {href: "#home", label: "Inicio"},
          {href: "#about-me", label: "Sobre mÃ­"},
          {href: "#projects", label: "Proyectos"},
          {href: "#contact", label: "contacto"},
        ]}
      />
      <slot />
    </main>
  </body>
</html>
<style is:global>
  @font-face {
    font-family: "Quicksand";
    src: url("./../../public/fonts/Quicksand/Quicksand-VariableFont_wght.ttf")
      format("ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  :root {
    --text: #eee;
    --text-accent: #99f;
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: Quicksand, sans-serif;
    background-size: 224px;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: rgb(2 6 23);
    margin: 1rem;
    color: var(--text);
  }
  .background,
  .background-header,
  .background-header-grid {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
  }
  .background {
    bottom: 0;
    background: linear-gradient(to bottom, #111422 1px, transparent 1px),
      linear-gradient(to right, #111422 1px, transparent 1px);
    background-size: 1rem 1.99rem;
    z-index: -1;
  }
  .background-header {
    height: 4rem;
    background-color: rgb(2 6 23);
    z-index: 1;
  }
  .background-header-grid {
    height: 4rem;
    background: linear-gradient(to bottom, #111422 1px, transparent 1px),
      linear-gradient(to right, #111422 1px, transparent 1px);
    background-size: 1rem 1.99rem;
    z-index: 1;
  }
  main {
    min-height: 100vh;
    width: 100%;
    max-width: 60rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  @media (width>768px) {
    .background,
    .background-header-grid {
      background-size: 1rem 1.67rem;
    }
    .background-header,
    .background-header-grid {
      height: 5rem;
    }
  }
</style>
